{
  "name": "DocuChat Streamlit App",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "streamlit_app.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "pip3 install --user -r requirements.txt && echo 'âœ… DocuChat requirements installed'",
  "postAttachCommand": {
    "server": "streamlit run streamlit_app.py --server.address 0.0.0.0 --server.port 8501"
  },
  "portsAttributes": {
    "8501": {
      "label": "DocuChat Streamlit App",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    8501
  ]
}