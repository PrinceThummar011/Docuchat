{
  "name": "DocuChat Flask App",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "simple_app.py",
        "DEPLOYMENT.md"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "pip3 install --user -r requirements.txt && echo 'âœ… DocuChat Requirements installed'",
  "postAttachCommand": {
    "server": "python simple_app.py"
  },
  "portsAttributes": {
    "5000": {
      "label": "DocuChat Flask App",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [
    5000
  ]
}